<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout 
        android:id="@+id/main_rl"
        android:layout_width="match_parent"
    	android:layout_height="match_parent" 
        >
        <LinearLayout 
            android:id="@+id/topLocalInfor"
            android:layout_width="match_parent"
    		android:layout_height="17dp" 
    		android:orientation="horizontal"
    		android:layout_marginTop="10dp"
            >
            <include layout="@layout/local_infor"
                android:visibility="gone"/>
        </LinearLayout>
        <RelativeLayout 
            android:id="@+id/pageTitle"
            android:layout_width="match_parent"
    		android:layout_height="83dp" 
    		android:layout_below="@id/topLocalInfor"
    		android:layout_marginTop="0dp"
    		android:layout_marginLeft="20dp"
            >
            <ImageView 
                android:id="@+id/leftIcon"
             	android:layout_width="20dp"
    			android:layout_height="83dp" 
    			android:layout_marginRight="20dp"
    			android:src="@drawable/top_left_icon"
                />
            <TextView 
                android:id="@+id/bigTitle"
                android:layout_width="200dp"
    			android:layout_height="50dp" 
    			android:textSize="@dimen/page_BigTitle_size"
    			android:layout_toRightOf="@id/leftIcon"
    			android:textColor="@color/common_color_white"
    			android:text="@string/network_BigTitle"
                />
             <TextView 
                android:id="@+id/littleTitle"
                android:layout_width="200dp"
    			android:layout_height="28dp" 
    			android:textSize="@dimen/page_littleTitle_size"
    			android:layout_below="@+id/bigTitle"
    			android:textColor="@color/page_LittleTitle"
    			android:text="@string/network_littleTitle"
    			android:layout_alignLeft="@+id/bigTitle"
                />
        </RelativeLayout>
        
        <LinearLayout 
             android:id="@+id/ll"
             android:layout_width="800dp"
    		 android:layout_height="500dp" 
    		 android:gravity="center"
    		 android:layout_centerHorizontal="true"
    		 android:layout_below="@id/pageTitle"
    		 android:orientation="vertical"
    		 android:focusable="true"
            >
           <ListView 
               android:id="@+id/menuList"
             android:layout_width="800dp"
    		 android:layout_height="400dp"
    		 android:layout_marginTop="20dp"
    		 android:listSelector="@drawable/wifilist_item_bg"
    		 android:visibility="gone"
               ></ListView>  
               
           <LinearLayout 
               android:id="@+id/network_item"
			   android:layout_width="800dp"
			   android:layout_height="60dp"
			   android:layout_marginTop="0dp"
			   android:focusable="true"
			   android:background="@drawable/network_item_bg"
			   android:focusableInTouchMode="true"
			   android:orientation="horizontal">
               <TextView 
                   android:id="@+id/network_title"
                   android:layout_width="200dp"
    		 		android:layout_height="50dp"
			    	android:gravity="left|center_vertical"
			    	android:layout_gravity="center"
			    	android:textColor="@color/common_color_white"
			    	android:textSize="28sp"
			    	android:layout_marginLeft="30dp"
			    	android:alpha="0.5"
                   />
               <ImageView 
			         android:id="@+id/netIcon"
			         android:layout_width="20dp"
			    	 android:layout_height="20dp"
			         android:layout_marginLeft="340dp"
			         android:layout_marginTop="20dp"
			         android:alpha="0.5"
			         android:visibility="invisible"
       				 />
               <com.grandartisans.advert.view.AlwaysMarqueeTextView
                    android:id="@+id/netState"
			        android:layout_width="160dp"
			    	android:layout_height="50dp"
			    	android:layout_marginLeft="20dp"
			    	android:gravity="center_vertical"
			    	android:textSize="20sp"
			    	android:layout_gravity="center"
			    	android:textColor="@color/common_color_white"
			    	android:alpha="0.5"
			    	android:ellipsize="marquee"
			    	android:singleLine="true"
			    	android:focusable="true"
			    	android:focusableInTouchMode="true"
			    	android:marqueeRepeatLimit="marquee_forever"
			    	android:visibility="invisible"
                   />
           </LinearLayout>
            <LinearLayout
				android:id="@+id/network_detect_item"
                android:layout_width="800dp"
    		 	android:layout_height="60dp"
    		 	android:focusable="true"
				android:background="@drawable/network_item_bg"
    		 	android:focusableInTouchMode="true"
    		 	android:layout_marginTop="10dp"
    		 	android:orientation="horizontal"
               >
               <TextView 
                   android:id="@+id/network_detect_title"
                   android:layout_width="200dp"
    		 		android:text="@string/network_detect_BigTitle"
    		 		android:layout_height="50dp"
			    	android:gravity="left|center_vertical"
			    	android:layout_gravity="center"
			    	android:textColor="@color/common_color_white"
			    	android:textSize="26sp"
			    	android:layout_marginLeft="30dp"
			    	android:alpha="0.5"
                   />
              
           </LinearLayout>
            <LinearLayout 
               	android:id="@+id/network_menu_speed_detect_item"
                android:layout_width="800dp"
    		 	android:layout_height="60dp"
    		 	android:focusable="true"
				android:visibility="gone"
				android:background="@drawable/network_item_bg"
    		 	android:focusableInTouchMode="true"
    		 	android:layout_marginTop="10dp"
    		 	android:orientation="horizontal"
               >
               <TextView 
                    android:id="@+id/network_detect_speed_title"
                   android:layout_width="200dp"
    		 		android:text="@string/network_menu_speed_detect"
    		 		android:layout_height="50dp"
			    	android:gravity="left|center_vertical"
			    	android:layout_gravity="center"
			    	android:textColor="@color/common_color_white"
			    	android:textSize="26sp"
			    	android:layout_marginLeft="30dp"
			    	android:alpha="0.5"
                   />
               
           </LinearLayout>
            <LinearLayout 
               	android:id="@+id/network_menu_blueTooth_item"
                android:layout_width="800dp"
    		 	android:layout_height="60dp"
    		 	android:focusable="true"
				android:visibility="gone"
				android:background="@drawable/network_item_bg"
    		 	android:focusableInTouchMode="true"
    		 	android:layout_marginTop="10dp"
    		 	android:orientation="horizontal"
               >
               <TextView 
                    android:id="@+id/network_detect_bluetooth_title"
                   android:layout_width="200dp"
    		 		android:text="@string/network_menu_blueTooth"
    		 		android:layout_height="50dp"
			    	android:gravity="left|center_vertical"
			    	android:layout_gravity="center"
			    	android:textColor="@color/common_color_white"
			    	android:textSize="26sp"
			    	android:layout_marginLeft="30dp"
			    	android:alpha="0.5"
                   />
               
           </LinearLayout>
        </LinearLayout>
       
    </RelativeLayout>

</FrameLayout>
