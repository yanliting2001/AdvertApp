<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="820dp"
    android:layout_height="50dp" 
    android:gravity="center">
    
    <RelativeLayout 
        android:id="@+id/rl"
        android:layout_width="match_parent"
   	    android:layout_height="match_parent"
   	    android:gravity="center_vertical"
   	    android:visibility="visible"
        >
        <ImageView 
           android:id="@+id/lockIcon"
           android:layout_width="25dp"
   	       android:layout_height="25dp" 
   	       android:layout_marginTop="10dp"
   	       android:layout_marginLeft="50dp"
   	       android:alpha="0.5"
   	       android:src="@drawable/settings_page_three_lock"
            />
        <TextView 
            android:id="@+id/wifiTitle"
            android:layout_width="400dp"
   	        android:layout_height="50dp" 
   	        android:textSize="26sp"
   	        android:gravity="center_vertical"
   	        android:textColor="#FFFFFF"
   	        android:layout_toRightOf="@+id/lockIcon"
   	        android:singleLine="true"
   	        android:layout_marginLeft="10dp"
            />
        <RelativeLayout 
            android:id="@+id/wifi_state_rl"
             android:layout_width="125dp"
   	       android:layout_height="35dp" 
   	        android:layout_marginLeft="100dp"
   	       android:layout_toRightOf="@+id/wifiTitle"
            >
        <ImageView 
            android:id="@+id/wifiConnectedIcon0"
           android:layout_width="25dp"
   	       android:layout_height="25dp" 
   	        android:layout_marginTop="10dp"
   	        android:src="@drawable/green_right_icon"
   	        android:alpha="0.5"
   	        android:visibility="invisible"
            />
        <TextView 
            android:id="@+id/wifiConnectedText0"
           android:layout_width="100dp"
   	       android:layout_height="35dp" 
   	       android:layout_toRightOf="@+id/wifiConnectedIcon0"
   	       android:layout_marginLeft="10dp"
   	        android:layout_marginTop="7dp"
   	        android:textSize="20sp"
   	        android:textColor="#FFFFFF"
   	        android:text="@string/detect_network_wirelessTip_connected"
   	        android:alpha="0.5"
   	        android:visibility="gone"
            />
        </RelativeLayout>
        <ImageView 
            android:id="@+id/wifiSignal"
           android:layout_width="25dp"
   	       android:layout_height="25dp" 
   	       android:layout_toRightOf="@+id/wifi_state_rl"
   	       android:layout_marginLeft="10dp"
   	       android:layout_marginTop="7dp"
   	       android:alpha="0.5"
            />
        <ImageView 
            android:id="@+id/rightIcon"
           android:layout_width="25dp"
   	       android:layout_height="25dp" 
   	       android:layout_toRightOf="@+id/wifiSignal"
   	       android:layout_marginLeft="10dp"
   	       android:layout_marginTop="7dp"
   	       android:visibility="gone"
            />
    </RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/rlSelected"
        android:layout_width="820dp"
   	    android:layout_height="50dp"
   	    android:gravity="center_vertical"
   	    android:visibility="gone"
        >
        <ImageView 
           android:id="@+id/lockIconSelected"
           android:layout_width="35dp"
   	       android:layout_height="35dp" 
   	       android:layout_marginTop="7dp"
   	       android:layout_marginLeft="45dp"
   	       android:src="@drawable/settings_page_three_lock"
            />
        <TextView 
            android:id="@+id/wifiTitleSelected"
            android:layout_width="390dp"
   	        android:layout_height="50dp" 
   	        android:textColor="#FFFFFF"
   	        android:textSize="35sp"
   	        android:gravity="center_vertical"
   	        android:layout_toRightOf="@+id/lockIconSelected"
   	        android:layout_marginLeft="10dp"
            />
        <ImageView 
            android:id="@+id/wifiConnectedIcon"
           android:layout_width="25dp"
   	       android:layout_height="25dp" 
   	       android:layout_toRightOf="@+id/wifiTitleSelected"
   	       android:layout_marginLeft="100dp"
   	        android:layout_marginTop="10dp"
   	        android:src="@drawable/green_right_icon"
   	        android:visibility="invisible"
            />
        <TextView 
            android:id="@+id/wifiConnectedText"
           android:layout_width="100dp"
   	       android:layout_height="35dp" 
   	       android:layout_toRightOf="@+id/wifiConnectedIcon"
   	       android:layout_marginLeft="10dp"
   	        android:layout_marginTop="7dp"
   	        android:textSize="22sp"
   	        android:textColor="#FFFFFF"
   	        android:text="@string/detect_network_wirelessTip_connected"
            />
        <ImageView 
            android:id="@+id/wifiSignalSelected"
           android:layout_width="35dp"
   	       android:layout_height="35dp" 
   	       android:layout_toRightOf="@+id/wifiConnectedText"
   	       android:layout_marginLeft="10dp"
   	        android:layout_marginTop="7dp"
            />
        <ImageView 
            android:id="@+id/rightIconSelected"
           android:layout_width="25dp"
   	       android:layout_height="25dp" 
   	       android:layout_toRightOf="@+id/wifiSignalSelected"
   	       android:layout_marginLeft="25dp"
   	       android:layout_marginTop="13dp"
   	        android:visibility="gone"
            />
    </RelativeLayout>
</RelativeLayout>
