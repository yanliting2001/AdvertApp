<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout 
        android:id="@+id/main_rl"
        android:layout_width="match_parent"
    	android:layout_height="match_parent" >
        <LinearLayout 
            android:id="@+id/topLocalInfor"
            android:layout_width="match_parent"
    		android:layout_height="17dp" 
    		android:orientation="horizontal"
    		android:layout_marginTop="10dp">
            <include 
                layout="@layout/local_infor"
                android:visibility="gone"/>
        </LinearLayout>
        <RelativeLayout 
            android:id="@+id/pageTitle"
            android:layout_width="match_parent"
    		android:layout_height="83dp" 
    		android:layout_below="@id/topLocalInfor"
    		android:layout_marginTop="0dp"
    		android:layout_marginLeft="20dp">
            <ImageView 
                android:id="@+id/leftIcon"
             	android:layout_marginTop="40dp"
             	android:layout_width="20dp"
    			android:layout_height="20dp" 
    			android:layout_marginRight="10dp"
    			android:src="@drawable/top_left_icon"
    			android:visibility="invisible"/>
            <TextView 
                android:id="@+id/bigTitle"
                android:layout_width="200dp"
    			android:layout_height="60dp" 
    			android:textSize="@dimen/page_BigTitle_size"
    			android:layout_toRightOf="@id/leftIcon"
    			android:textColor="@color/common_color_white"
    			android:text="@string/system_settings_BigTitle"
    			android:textStyle="bold"/>
             <TextView 
                android:id="@+id/littleTitle"
                android:layout_width="250dp"
    			android:layout_height="28dp" 
    			android:textSize="16sp"
    			android:layout_below="@+id/bigTitle"
    			android:textColor="#80FFFFFF"
    			android:text="@string/select_accout_littleTitle"
    			android:layout_alignLeft="@+id/bigTitle"
    			android:visibility="gone"/>
        </RelativeLayout>
	    <com.grandartisans.advert.view.Myhsv
			android:id="@+id/hsv"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:focusable="false"
		    android:layout_below="@id/pageTitle"
		    android:descendantFocusability="afterDescendants"
		    android:scrollbars="none">
			<LinearLayout 
            	android:layout_width="match_parent"
	    		android:layout_height="match_parent"
	    		android:orientation="horizontal"
				android:layout_gravity="center"
				android:gravity="center">
			    <LinearLayout
	            android:id="@+id/networksetting_ll" 
	            android:layout_width="@dimen/sys_main_item_width"
	    		android:layout_height="@dimen/sys_main_item_height"
	    		android:orientation="vertical"
	    		android:gravity="center"
	    		android:background="@drawable/item_bg"
	    		android:focusable="true"
	    		android:visibility="visible"
	    		android:layout_gravity="center_vertical"
	    		android:layout_marginLeft="100dp"
	            >

					<ImageView
						android:id="@+id/network_settingsTip_icon"
						android:layout_width="100dp"
						android:layout_height="100dp"
						android:layout_marginTop="10dp"
						android:src="@drawable/sys_net" />
	            <TextView 
	                android:id="@+id/network_settingsTip_title"
	                 android:layout_width="match_parent"
	    			android:layout_height="45dp"
	    			android:textColor="#FFFFFF"
	    			android:textSize="24sp"
	    			android:layout_marginTop="30dp"
	    			android:gravity="center"
	    			android:textStyle="bold"
	    			android:text="@string/sys_network_text"
	                />
	            
	        </LinearLayout>
	        <LinearLayout
	            android:id="@+id/commSetting_ll" 
	            android:layout_width="@dimen/sys_main_item_width"
	    		android:layout_height="@dimen/sys_main_item_height"
	    		android:orientation="vertical"
	    		android:gravity="center"
	    		android:background="@drawable/item_bg"
	    		android:focusable="true"
	    		android:visibility="gone"
	    		android:layout_marginLeft="15dp"
	    		android:layout_gravity="center_vertical"
	            >
             	<ImageView 
             	    android:id="@+id/comm_settingsTip_icon"
             	    android:layout_width="100dp"
		         	android:layout_height="100dp"
		         	android:src="@drawable/sys_common"
		         	android:layout_marginTop="10dp"
		         	android:alpha="0.5"
             	    />
	            <TextView 
	                android:id="@+id/comm_settingsTip_title"
	                 android:layout_width="match_parent"
	    			android:layout_height="45dp"
	    			android:textColor="#FFFFFF"
	    			android:textSize="24sp"
	    			android:layout_marginTop="30dp"
	    			android:gravity="center"
	    			android:textStyle="bold"
	    			android:text="@string/common_setting_BigTitle"
	    			android:alpha="0.5"
	                />
	        </LinearLayout>
	       	<LinearLayout
	            android:id="@+id/touyingSetting_ll" 
	            android:layout_width="@dimen/sys_main_item_width"
	    		android:layout_height="@dimen/sys_main_item_height"
	    		android:orientation="vertical"
	    		android:gravity="center"
	    		android:background="@drawable/item_bg"
	    		android:focusable="true"
	    		android:visibility="visible"
	    		android:layout_marginLeft="15dp"
	    		android:layout_gravity="center_vertical"
	            >
             	<ImageView 
             	    android:id="@+id/touying_settingsTip_icon"
             	    android:layout_width="100dp"
		         	android:layout_height="100dp"
		         	android:src="@drawable/sys_touying"
		         	android:layout_marginTop="10dp"
		         	android:alpha="0.5"
             	    />
	            <TextView 
	                android:id="@+id/touying_settingsTip_title"
	                 android:layout_width="match_parent"
	    			android:layout_height="45dp"
	    			android:textColor="#FFFFFF"
	    			android:textSize="24sp"
	    			android:layout_marginTop="30dp"
	    			android:gravity="center"
	    			android:textStyle="bold"
	    			android:text="@string/touying_setting_BigTitle"
	    			android:alpha="0.5"
	                />
	        </LinearLayout>
	        <LinearLayout
	            android:id="@+id/screenSettings_ll" 
	            android:layout_width="@dimen/sys_main_item_width"
	    		android:layout_height="@dimen/sys_main_item_height"
	    		android:orientation="vertical"
	    		android:gravity="center"
	    		android:background="@drawable/item_bg"
	    		android:focusable="true"
				android:visibility="gone"
	    		android:layout_marginLeft="15dp"
	    		android:layout_gravity="center_vertical"
	            >
             	<ImageView 
             	    android:id="@+id/screen_settingsTip_icon"
             	    android:layout_width="100dp"
		         	android:layout_height="100dp"
		         	android:src="@drawable/pmjz_icon"
		         	android:layout_marginTop="10dp"
		         	android:alpha="0.5"
             	    />
	            <TextView 
	                android:id="@+id/screen_settingsTip_title"
	                 android:layout_width="match_parent"
	    			android:layout_height="45dp"
	    			android:textColor="#FFFFFF"
	    			android:textSize="24sp"
	    			android:layout_marginTop="30dp"
	    			android:gravity="center"
	    			android:textStyle="bold"
	    			android:text="@string/display_setting_text"
	    			android:alpha="0.5"
	                />
	        </LinearLayout>
	        <RelativeLayout
	        	android:id="@+id/playSettings_ll" 
	           	android:layout_width="@dimen/sys_main_item_width"
	    		android:layout_height="@dimen/sys_main_item_height"
	    		android:orientation="vertical"
	    		android:background="@drawable/item_bg"
	    		android:focusable="true"
				android:visibility="gone"
	    		android:layout_marginLeft="15dp"
	    		android:layout_gravity="center_vertical"
	            >
             	<ImageView 
             	    android:id="@+id/play_settingsTip_icon"
             	    android:layout_width="100dp"
		         	android:layout_height="100dp"
		         	android:src="@drawable/sys_distance"
		         	android:layout_marginTop="80dp"
		         	android:layout_marginLeft="80dp"
		         	android:alpha="0.5"
             	    />
	            <TextView 
	                android:id="@+id/play_settingsTip_title"
	                 android:layout_width="match_parent"
	    			android:layout_height="45dp"
	    			android:textColor="#FFFFFF"
	    			android:layout_below="@id/play_settingsTip_icon"
	    			android:textSize="24sp"
	    			android:layout_marginTop="30dp"
	    			android:gravity="center"
	    			android:textStyle="bold"
	    			android:text="@string/sys_distance_text"
	    			android:alpha="0.5"
	                />
	        </RelativeLayout>
	        <RelativeLayout
	        	android:id="@+id/gsensorSettings_ll" 
	           	android:layout_width="@dimen/sys_main_item_width"
	    		android:layout_height="@dimen/sys_main_item_height"
	    		android:orientation="vertical"
	    		android:background="@drawable/item_bg"
	    		android:focusable="true"
				android:visibility="gone"
	    		android:layout_marginLeft="15dp"
	    		android:layout_gravity="center_vertical"
	            >
             	<ImageView 
             	    android:id="@+id/gsensor_settingsTip_icon"
             	    android:layout_width="100dp"
		         	android:layout_height="100dp"
		         	android:src="@drawable/sys_distance"
		         	android:layout_marginTop="80dp"
		         	android:layout_marginLeft="80dp"
		         	android:alpha="0.5"
             	    />
	            <TextView 
	                android:id="@+id/gsensor_settingsTip_title"
	                 android:layout_width="match_parent"
	    			android:layout_height="45dp"
	    			android:textColor="#FFFFFF"
	    			android:layout_below="@id/gsensor_settingsTip_icon"
	    			android:textSize="24sp"
	    			android:layout_marginTop="30dp"
	    			android:gravity="center"
	    			android:textStyle="bold"
	    			android:text="@string/sys_gsensor_text"
	    			android:alpha="0.5"
	                />
	        </RelativeLayout>
				<LinearLayout
					android:id="@+id/zhanghu_ll"
					android:layout_width="@dimen/sys_main_item_width"
					android:layout_height="@dimen/sys_main_item_height"
					android:orientation="vertical"
					android:gravity="center"
					android:background="@drawable/item_bg"
					android:focusable="true"
					android:layout_marginLeft="15dp"
					android:layout_gravity="center_vertical"
					>
					<ImageView
						android:id="@+id/zhanghu_settingsTip_icon"
						android:layout_width="100dp"
						android:layout_height="100dp"
						android:src="@drawable/sys_time"
						android:layout_marginTop="10dp"
						android:alpha="0.5"
						/>
					<TextView
						android:id="@+id/zhanghu_settingsTip_title"
						android:layout_width="match_parent"
						android:layout_height="45dp"
						android:textColor="#FFFFFF"
						android:textSize="24sp"
						android:layout_marginTop="30dp"
						android:gravity="center"
						android:textStyle="bold"
						android:text="@string/time_settings"
						android:alpha="0.5"
						/>
				</LinearLayout>
	        <RelativeLayout
	            android:id="@+id/versionSettings_ll" 
	            android:layout_width="@dimen/sys_main_item_width"
	    		android:layout_height="@dimen/sys_main_item_height"
	    		android:orientation="vertical"
	    		android:background="@drawable/item_bg"
	    		android:focusable="true"
	    		android:layout_marginLeft="15dp"
	    		android:layout_gravity="center_vertical"
	            >
             	<ImageView 
             	    android:id="@+id/version_settingsTip_icon"
             	    android:layout_width="100dp"
		         	android:layout_height="100dp"
		         	android:src="@drawable/sys_update"
		         	android:layout_marginTop="80dp"
		         	android:layout_marginLeft="65dp"
		         	android:alpha="0.5"
             	    />
	            <TextView 
	                android:id="@+id/version_settingsTip_title"
	                android:layout_width="match_parent"
	    			android:layout_height="45dp"
	    			android:textColor="#FFFFFF"
	    			android:layout_below="@id/version_settingsTip_icon"
	    			android:textSize="24sp"
	    			android:layout_marginTop="30dp"
	    			android:gravity="center"
	    			android:textStyle="bold"
	    			android:text="@string/about_versonInfo_text"
	    			android:alpha="0.5"
	                />
	            <ImageView 
	                 android:id="@+id/update_red_icon"
	                 android:layout_width="20dp"
	    			 android:layout_height="20dp"
	    			 android:src="@drawable/update_icon"
	    			 android:layout_alignParentRight="true"
	    			 android:layout_marginRight="30dp"
	    			 android:layout_marginTop="26dp"
	    			 android:visibility="invisible"
	                />
	            <TextView 
	                android:id="@+id/update_red_num"
	                 android:layout_width="30dp"
	    			 android:layout_height="30dp"
	    			 android:layout_alignParentRight="true"
	    			 android:layout_marginRight="30dp"
	    			 android:layout_marginTop="24dp"
	    			 android:textColor="@color/common_color_white"
	    			 android:textSize="24sp"
	    			 android:gravity="center"
	    			 android:visibility="invisible"
	                />
	        </RelativeLayout>
	        <LinearLayout
	            android:id="@+id/accountSettings_ll" 
	            android:layout_width="@dimen/sys_main_item_width"
	    		android:layout_height="@dimen/sys_main_item_height"
	    		android:orientation="vertical"
	    		android:gravity="center"
	    		android:background="@drawable/item_bg"
	    		android:focusable="true"
	    		android:visibility="gone"
	    		android:layout_marginLeft="15dp"
	    		android:layout_gravity="center_vertical"
	            >
             	<ImageView 
             	    android:id="@+id/accout_settingsTip_icon"
             	    android:layout_width="100dp"
		         	android:layout_height="100dp"
		         	android:src="@drawable/sys_safe"
		         	android:layout_marginTop="10dp"
		         	android:alpha="0.5"
             	    />
	            <TextView 
	                android:id="@+id/accout_settingsTip_title"
	                 android:layout_width="match_parent"
	    			android:layout_height="45dp"
	    			android:textColor="#FFFFFF"
	    			android:textSize="24sp"
	    			android:layout_marginTop="30dp"
	    			android:gravity="center"
	    			android:textStyle="bold"
	    			android:text="@string/safe_setting_BigTitle"
	    			android:alpha="0.5"
	                />
	            
	        </LinearLayout>
	       	<LinearLayout
	            android:id="@+id/contactus_ll" 
	            android:layout_width="@dimen/sys_main_item_width"
	    		android:layout_height="@dimen/sys_main_item_height"
	    		android:orientation="vertical"
	    		android:gravity="center"
	    		android:background="@drawable/item_bg"
	    		android:focusable="true"
	    		android:layout_marginLeft="15dp"
	    		android:layout_gravity="center_vertical"
	    		android:visibility="gone"
	            >
             	<ImageView 
             	    android:id="@+id/contactus_settingsTip_icon"
             	    android:layout_width="100dp"
		         	android:layout_height="100dp"
		         	android:src="@drawable/contactus_setting_normal"
		         	android:layout_marginTop="10dp"
		         	android:alpha="0.5"
             	    />
	            <TextView 
	             	android:id="@+id/contactus_settingsTip_title"
	                android:layout_width="match_parent"
	    			android:layout_height="45dp"
	    			android:textColor="#FFFFFF"
	    			android:textSize="24sp"
	    			android:layout_marginTop="30dp"
	    			android:gravity="center"
	    			android:textStyle="bold"
	    			android:text="@string/str_contactus_title"
	    			android:alpha="0.5"
	                />
	        </LinearLayout>
	          <LinearLayout
	            android:id="@+id/about_ll" 
	            android:layout_width="@dimen/sys_main_item_width"
	    		android:layout_height="@dimen/sys_main_item_height"
	    		android:orientation="vertical"
	    		android:gravity="center"
	    		android:background="@drawable/item_bg"
	    		android:focusable="true"
	    		android:layout_marginLeft="15dp"
	    		android:layout_gravity="center_vertical"
	    		android:layout_marginRight="100dp"
	            >
             	<ImageView 
             	    android:id="@+id/about_settingsTip_icon"
             	    android:layout_width="100dp"
		         	android:layout_height="100dp"
		         	android:src="@drawable/sys_about"
		         	android:layout_marginTop="10dp"
		         	android:alpha="0.5"
             	    />
	            <TextView 
	                android:id="@+id/about_settingsTip_title"
	                 android:layout_width="match_parent"
	    			android:layout_height="45dp"
	    			android:textColor="#FFFFFF"
	    			android:textSize="24sp"
	    			android:layout_marginTop="30dp"
	    			android:gravity="center"
	    			android:textStyle="bold"
	    			android:text="@string/about_setting_BigTitle"
	    			android:alpha="0.5"
	                />
	            
	        </LinearLayout>
	        </LinearLayout>
		  </com.grandartisans.advert.view.Myhsv>
	      
    </RelativeLayout>

</FrameLayout>
