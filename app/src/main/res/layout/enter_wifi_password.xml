<?xml version="1.0" encoding="utf-8"?>
         <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/enterPassword"
             android:layout_width="match_parent"
    		 android:layout_height="200dp"
    		 android:orientation="vertical"
    		 android:gravity="center"
             >
             <RelativeLayout 
                 android:layout_width="800dp"
    			 android:layout_height="50dp" 
    			 android:gravity="center"
    			 android:layout_marginTop="30dp"
                 >
                 <TextView 
                     android:id="@+id/wifiTitle"
                     android:layout_width="300dp"
    				 android:layout_height="50dp" 
    				 android:textSize="22sp"
    				 android:textColor="#FFFFFF"
    				 android:gravity="center_vertical"
                     />
                 <ImageView 
                     android:id="@+id/wifisignal"
                      android:layout_width="30dp"
    				 android:layout_height="30dp"
    				 android:src="@drawable/icon_wifi_3"
    				 android:layout_marginLeft="300dp"
    				 android:layout_toRightOf="@+id/wifiTitle"
                     />
                 <ImageView 
                      android:layout_width="25dp"
    				 android:layout_height="25dp"
    				 android:src="@drawable/icon_arrow_right"
    				  android:layout_toRightOf="@+id/wifisignal"
    				  android:layout_marginLeft="10dp"
    				  android:layout_marginTop="3dp"
                     />
             </RelativeLayout>
              <RelativeLayout 
                 android:layout_width="800dp"
    			 android:layout_height="50dp" 
    			 android:layout_marginTop="10dp"
                 >
                  <TextView 
                    android:id="@+id/psdText"
                    android:layout_width="80dp"
    			 	android:layout_height="50dp" 
    			 	android:text="@string/enter_wifi_password_pass_text"
    			 	android:textSize="22sp"
    			 	android:textColor="#80FFFFFF"
    			 	android:layout_marginLeft="70dp"
    			 	android:gravity="center"
                      />
                  <EditText 
                    android:id="@+id/EditPsd"
                    android:layout_width="500dp"
    			 	android:layout_height="50dp" 
    			 	android:textColor="#97FFFF"
    			 	android:gravity="center"
    			 	android:focusable="true"
    			 	android:layout_toRightOf="@+id/psdText"
    			 	android:inputType="textPassword"
    			 	android:background="@null"
    			 	android:singleLine="true"
    			 	android:imeOptions="actionDone"
    			 	android:textCursorDrawable="@null"
    			 	android:textSize="24sp"
                      />
                  <TextView 
                     android:layout_width="660dp"
    			 	 android:layout_height="1dp" 
    			 	 android:background="#50FFFFFF"
    			 	 android:layout_alignParentBottom="true"
    			 	 android:layout_centerHorizontal="true"
    			 	 android:gravity="center"
    			 	 android:layout_marginBottom="4dp"
                      />
              </RelativeLayout>
         </LinearLayout>

