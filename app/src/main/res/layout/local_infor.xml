<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right|center_vertical"
    android:layout_marginRight="30dp"
    android:orientation="horizontal" >
    
    	<ImageView 
    	    android:id="@+id/icon_buletooth"
          android:layout_width="25dp"
    	  android:layout_height="30dp"
    	  android:src="@drawable/icon_buletooth"
    	  android:visibility="visible"
    	  android:layout_marginTop="2dp"
        />
		<ImageView 
		      android:id="@+id/icon_remote"
	          android:layout_width="25dp"
	    	  android:layout_height="30dp"
	    	   android:layout_marginLeft="15dp"
	    	   android:layout_marginTop="2dp"
	    	  android:src="@drawable/icon_remote"
	    	  android:visibility="visible"
	        />
		<ImageView 
		    android:id="@+id/icon_network" 
	          android:layout_width="25dp"
	    	  android:layout_height="30dp"
	    	  android:layout_marginTop="2dp"
	    	   android:layout_marginLeft="15dp"
	    	  android:src="@drawable/icon_strong_wifi"
	    	  android:visibility="visible"
	        />
		<ImageView
		      android:id="@+id/icon_weather" 
	          android:layout_width="25dp"
	    	  android:layout_height="30dp"
	    	   android:layout_marginLeft="15dp"
	    	   android:layout_marginTop="2dp"
	    	  android:src="@drawable/icon_cloud"
	    	  android:visibility="visible"
	        />
		<TextView 
		   	 android:id="@+id/temp"
	          android:layout_width="wrap_content"
	    	  android:layout_height="30dp"
	    	  android:textSize="20sp"
	    	   android:layout_marginLeft="5dp"
	    	  android:textColor="#FFFFFF"
	    	  android:visibility="visible"
	    	  android:layout_marginTop="2dp"
	    	  android:alpha="0.5"
	    	  android:gravity="center"
	        />
		<TextView 
		      android:id="@+id/localTime"
	          android:layout_width="wrap_content"
	    	  android:layout_height="30dp"
	    	  android:textSize="25sp"
	    	  android:layout_marginLeft="10dp"
	    	  android:textStyle="normal"
	    	  android:gravity="center"
	    	  android:textColor="#FFFFFF"
	    	  android:alpha="0.5"
	        />
</LinearLayout>
